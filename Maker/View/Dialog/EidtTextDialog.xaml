<Window x:Class="Maker.View.Dialog.EidtTextDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maker.View.Dialog"
        mc:Ignorable="d"
        Background="#535353"
        WindowStartupLocation="CenterScreen"
        Title="{DynamicResource ModificationIntroduction}" Height="350" Width="550">
    <Grid>
        <TextBox Name="tbText"  Background="#535353" Foreground="#FFFFFF" FontSize="14" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AcceptsReturn="True" TextWrapping="Wrap" ></TextBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Name="btnOk"  Width="70" Click="btnOk_Click" Foreground="White" FontSize="14" Height="25" Background="{x:Null}" BorderBrush="White" Content="{DynamicResource Ok}"></Button>
            <Button Name="btnCancel" Width="70" Click="btnCancel_Click" Foreground="White" FontSize="14" Height="25" Background="{x:Null}" BorderBrush="White" Content="{DynamicResource Cancel}"></Button>
        </StackPanel>

    </Grid>
</Window>
