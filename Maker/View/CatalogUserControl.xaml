<UserControl x:Class="Maker.View.CatalogUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0" Background="#f5f5f5">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Height="50">
                    <TextBlock Foreground="#a3a3a3" Text="MAKER " HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" FontFamily="Times New Roman" />
                    <TextBlock Foreground="#282828" Text="LIGHT" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" FontFamily="Poiret One"/>
                </StackPanel>
                <TextBlock HorizontalAlignment="Stretch" Height="1" Background="#e1e1e1"/>
                <StackPanel Orientation="Horizontal"  Margin="30,20,0,0">
                    <Image RenderOptions.BitmapScalingMode="Fant" Source="../Image/element.png" Width="30"/>
                    <TextBlock Foreground="#282828" Text="元素" HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"  MouseEnter="StackPanel_MouseEnter" MouseLeave="StackPanel_MouseLeave" Height="40" Background="#f5f5f5" MouseLeftButtonDown="StackPanel_MouseLeftButtonDown" Name="spLight">
                    <TextBlock Foreground="#282828" Text="无逻辑" FontSize="20" VerticalAlignment="Center" Margin="70,0,0,0"/>
                    <TextBlock Foreground="#a3a3a3" Text="灯光" FontSize="20" VerticalAlignment="Center" Margin="0,0,0,0"/>
                    <TextBlock Foreground="#282828" Text="(.light)" FontSize="20" VerticalAlignment="Center" Margin="0,0,70,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"  MouseEnter="StackPanel_MouseEnter"  MouseLeave="StackPanel_MouseLeave" Height="40" Background="#f5f5f5" MouseLeftButtonDown="StackPanel_MouseLeftButtonDown">
                    <TextBlock Foreground="#282828" Text="逻辑" FontSize="20" VerticalAlignment="Center" Margin="70,0,0,0"/>
                    <TextBlock Foreground="#a3a3a3" Text="灯光" FontSize="20" VerticalAlignment="Center" Margin="0,0,0,0"/>
                    <TextBlock Foreground="#282828" Text="(.lightScript)" FontSize="20" VerticalAlignment="Center" Margin="0,0,70,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <ScrollViewer Grid.Column="1" Name="svRight" Background="#ffffff"/>



    </Grid>
</UserControl>
