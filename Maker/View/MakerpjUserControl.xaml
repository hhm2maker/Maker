<UserControl x:Class="Maker.View.MakerpjUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Maker.View"
             mc:Ignorable="d" 
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             Loaded="UserControl_Loaded"
            >
    <StackPanel>
       <StackPanel Orientation="Horizontal" Margin="20">
            <TextBlock FontSize="16" Width="65" HorizontalAlignment="Left" VerticalAlignment="Center"  Text="{DynamicResource TutorialColon}" />
            <TextBlock FontSize="16" Name="tbTutorialPath" Margin="10,0,10,0" HorizontalAlignment="Left" VerticalAlignment="Center"  Foreground="White" Width="100" />
            <Button Name="btnSelectFile" Click="btnSelectFile_Click"  HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center"   FontSize="14" Width="80" Height="30" Content="{DynamicResource Select}" />
            <Button Name="btnRemoveFile" Click="btnRemoveFile_Click"  HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center"   FontSize="14" Width="80" Height="30" Content="{DynamicResource Remove}" />
        </StackPanel>
    </StackPanel>
</UserControl>
