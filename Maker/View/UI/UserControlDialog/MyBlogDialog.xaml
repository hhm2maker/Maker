<local:MakerDialog x:Class="Maker.View.UI.UserControlDialog.MyBlogDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Maker.View.UI.UserControlDialog"
             mc:Ignorable="d" 
             Background="#363b40"
             Height="200" Width="600"
             VerticalAlignment="Top"
             >
    <UserControl.Effect>
        <DropShadowEffect Color="#1b1e21"  BlurRadius="20" />
    </UserControl.Effect>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
    <StackPanel Orientation="Vertical" Grid.Row="0">
            <StackPanel Orientation="Horizontal" Margin="30">
                <Image Source="../../../View/Resources/Image/headportrait.png" Width="50"  RenderOptions.BitmapScalingMode="Fant"/>
                <StackPanel Orientation="Vertical" Margin="30,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="hhm"  FontSize="18" Foreground="White" />
                    <TextBlock Text="https://www.hhm2maker.com/" FontSize="12" Margin="0,5,0,0" Foreground="#FFC8C8C8" Name="tbContent"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <Rectangle Grid.Row="1" Fill="#1e1e21"/>
        <DockPanel Grid.Row="2">
            <Button Style="{StaticResource EmptyButtonStyle}" Name="btnOk"  Click="btnOk_Click" Height="35" Width="100" BorderBrush="White" Background="Transparent"  FontSize="18" Foreground="#b8bfc6" Margin="15" DockPanel.Dock="Right" HorizontalAlignment="Right">
                <Button.Content >
                    <TextBlock Text="{DynamicResource Ok}" FontSize="16" Foreground="#b8bfc6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button.Content>
            </Button>
        </DockPanel>
    </Grid>
</local:MakerDialog>
