        <Border Name="gFile" Grid.Column="1" CornerRadius="3" VerticalAlignment="Top" BorderBrush="#555555" BorderThickness="2" Margin="15,0,15,0">
                <Grid  Margin="30,0,30,30" >
                    <Grid.Effect>
                        <DropShadowEffect Color="#1c1e1f"  BlurRadius="20" />
                    </Grid.Effect>
