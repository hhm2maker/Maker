<view:BaseUserControl
    xmlns:view="clr-namespace:Maker.View"
    x:Class="Maker.View.Dialog.LimitlessLampUserControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:device="clr-namespace:Maker.View.Device"
    xmlns:view1="clr-namespace:Maker.View.UI.Device.ColorPanel"
    mc:Ignorable="d"
        Background="#535353"
        Loaded="Window_Loaded"
       >
    <Grid Name="gMain" >
    <Grid >
        <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*" Name="cdMain"/>
                <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
            <view1:CompleteColorPanel x:Name="completeColorPanel" Grid.Row="0"/>
            <device:GrowLaunchpad Grid.Column="1" x:Name="mLaunchpad" HorizontalAlignment="Left" VerticalAlignment="Top" />
            <DockPanel Grid.Column="2" HorizontalAlignment="Center">
        <StackPanel Orientation="Vertical" DockPanel.Dock="Top">
                <Button  Click="AddColumn" Foreground="White" FontSize="14" Width="130" Height="22" Background="{x:Null}" BorderBrush="White" Margin="0,20,0,0" Content="{DynamicResource AddOneColumn}" />
                <Button  Click="RemoveColumn" Foreground="White" FontSize="14" Width="130" Height="22" Background="{x:Null}" BorderBrush="White" Margin="0,10,0,0" Content="{DynamicResource ReduceOneColumn}" />
                    <Button  Click="AddRow" Foreground="White" FontSize="14" Width="130" Height="22" Background="{x:Null}" BorderBrush="White" Margin="0,20,0,0" Content="{DynamicResource AddOneRow}" />
                    <Button  Click="RemoveRow" Foreground="White" FontSize="14" Width="130" Height="22" Background="{x:Null}" BorderBrush="White" Margin="0,10,0,0" Content="{DynamicResource ReduceOneRow}" />
                    <Button  Click="SaveFile" Foreground="White" FontSize="14" Width="130" Background="{x:Null}" BorderBrush="White" Margin="0,20,0,0" Content="{DynamicResource Ok}" />
                    <Button Foreground="White" FontSize="14" Width="130" Height="22" Background="{x:Null}" BorderBrush="White" Margin="0,10,0,0" Content="{DynamicResource Translation}" />
                </StackPanel>
                <device:LaunchpadPro x:Name="previewLaunchpad" VerticalAlignment="Bottom"  DockPanel.Dock="Bottom"/>
            </DockPanel>
    </Grid>
    </Grid>
</view:BaseUserControl>
