<usercontroldialog:BaseStyleUserControl
    xmlns:usercontroldialog="clr-namespace:Maker.View.UI.UserControlDialog"
    x:Class="Maker.View.Style.BaseStyleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Loaded="BaseStyleUserControl_Loaded"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="1" Name="sv" VerticalScrollBarVisibility="Auto" Background="Transparent" Template="{DynamicResource ScrollViewerControlTemplate1}" >
            <StackPanel Name="svMain" Margin="0,0,0,20" Background="Transparent" />
        </ScrollViewer>
    </Grid>
</usercontroldialog:BaseStyleUserControl>
