<UserControl x:Class="Maker.View.UI.Home.HomeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Maker.View.UI.Home"
             mc:Ignorable="d" 
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="#FF28282B"
             Loaded="UserControl_Loaded"
             >
    <Grid HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Width="300" Orientation="Vertical">
            <Border HorizontalAlignment="Stretch" CornerRadius="3,3,0,0" BorderBrush="#555555" BorderThickness="2">
                <TextBlock Text="{DynamicResource Project}" Foreground="White" Margin="10"/>
            </Border>
            <Border HorizontalAlignment="Stretch" CornerRadius="0,0,3,3" BorderBrush="#555555" BorderThickness="2,0,2,2">
                <StackPanel>
                <DockPanel >
                    <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Text="{DynamicResource MyProject}" Foreground="#72787d"  Margin="10"/>
                    <Image MouseLeftButtonDown="Image_MouseLeftButtonDown" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="10" Source="../../../View/Resources/Image/add_dark.png" Width="30"  RenderOptions.BitmapScalingMode="Fant"  VerticalAlignment="Center" />
                </DockPanel>
                    <StackPanel Name="spProject" />
                </StackPanel>
            </Border>
                
        </StackPanel>
        <Border Grid.Column="1" CornerRadius="3" VerticalAlignment="Top" BorderBrush="#555555" BorderThickness="2" Margin="15,0,15,0">
            <StackPanel Name="spCenter" Margin="15"/>
        </Border>
        <StackPanel Grid.Column="2" Width="300" Orientation="Vertical">
            <Border HorizontalAlignment="Stretch" CornerRadius="3,3,0,0" BorderBrush="#555555" BorderThickness="2">
                <TextBlock Text="联系方式" Foreground="White" Margin="10"/>
            </Border>
            <Border HorizontalAlignment="Stretch" CornerRadius="0,0,3,3" BorderBrush="#555555" BorderThickness="2,0,2,2">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal"  Margin="10">
                    <TextBlock Text="网站：" Foreground="White"/>
                    <TextBlock Text="https://www.hhm2maker.com/" Foreground="White" />
                </StackPanel>
                    <StackPanel Orientation="Horizontal"  Margin="10">
                    <TextBlock Text="Email：" Foreground="White"/>
                    <TextBlock Text="hhm2maker@qq.com" Foreground="White" />
                </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
