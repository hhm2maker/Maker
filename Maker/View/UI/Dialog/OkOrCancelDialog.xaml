<Window x:Class="Maker.View.Dialog.OkOrCancelDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maker.View.Dialog"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        ShowInTaskbar="False" 
        Title="{DynamicResource Warning}" 
        Background="#535353"
        Width="390"
        Height="230"
        WindowStartupLocation="CenterScreen"
           ResizeMode="NoResize"
       >
        <StackPanel  Width="350" Margin="20" >
        <TextBlock FontSize="16"  Foreground="#FF5A5A" Name="tbMessage" Height="100" TextWrapping="Wrap"></TextBlock>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
            <Button  Click="BtnOk_Click" Foreground="#FF5A5A" FontSize="14" Width="60" Background="{x:Null}" BorderBrush="#FF5A5A" Content="{DynamicResource Ok}"></Button>
                <Button  Click="BtnCancel_Click" Foreground="White" FontSize="14" Width="60" Background="{x:Null}" BorderBrush="White" Margin="20,0,0,0" Content="{DynamicResource Cancel}"></Button>
            </StackPanel>
        </StackPanel>

</Window>
