<Window x:Class="Maker.NewMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maker"
        mc:Ignorable="d"
        Closed="Window_Closed"
        Title="Maker" 
        WindowState="Maximized"
        Background="#1c1a1c"
        Loaded="Window_Loaded"
        >
    <!--AllowsTransparency="True"
        WindowStyle="None"-->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View/StyleResources/CatalogUserControlDictionary.xaml" />
                <ResourceDictionary Source="View/StyleResources/AllDictionary.xaml" />
                <ResourceDictionary Source="View/StyleResources/MainWindowStyle.xaml" />
                <ResourceDictionary Source="View/StyleResources/Brushes.xaml" />
                <ResourceDictionary Source="View/StyleResources/ExpanderStyles.xaml" />
                <ResourceDictionary Source="View/StyleResources/StoryBoards.xaml" />
                <ResourceDictionary Source="View/StyleResources/RoundBorderPanelStyle.xaml" />
                <ResourceDictionary Source="View/StyleResources/PulseButton.xaml" />
                <ResourceDictionary Source="View/StyleResources/InputDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Name="gMost" DockPanel.Dock="Top">
        <DockPanel>
            <Grid DockPanel.Dock="Top">
                <DockPanel>
                    <DockPanel  DockPanel.Dock="Left" Background="#222326" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                        <Image DockPanel.Dock="Top" Margin="15,25,15,25" Source="View/Resources/Image/file.png" Width="30" HorizontalAlignment="Center" VerticalAlignment="Top" RenderOptions.BitmapScalingMode="Fant" MouseLeftButtonDown="OpenFileControl"/>
                        <Image DockPanel.Dock="Top" Width="20"  Source="View/Resources/Image/device.png" MouseLeftButtonDown="OpenDevice" ToolTip="{DynamicResource Device}" HorizontalAlignment="Center" VerticalAlignment="Top" />
                        <Image DockPanel.Dock="Bottom" Width="20" Margin="15,25,15,25" Source="View/Resources/Image/setting.png" MouseLeftButtonDown="OpenSetting" ToolTip="{DynamicResource Device}" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
                    </DockPanel>
                    <Grid  Name="gCenter" DockPanel.Dock="Left"/>
                </DockPanel>
                <StackPanel Orientation="Vertical"  HorizontalAlignment="Left" Name="spMain" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="View/Resources/Image/light.png" Width="50" RenderOptions.BitmapScalingMode="Fant"/>
                        <TextBlock Text="{DynamicResource Light}" Foreground="White" FontSize="30" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <Image Source="View/Resources/Image/question.png" Width="35" RenderOptions.BitmapScalingMode="Fant" Margin="20,0,0,0" VerticalAlignment="Center">
                            <Image.ToolTip>
                                <StackPanel Orientation="Vertical">
                                </StackPanel>
                            </Image.ToolTip>
                        </Image>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Image Source="View/Resources/Image/plus.png" Width="50" RenderOptions.BitmapScalingMode="Fant" Margin="5,0,0,0"/>
                        <TextBlock Text="{DynamicResource LightScript}" Foreground="White" FontSize="30" VerticalAlignment="Center" Margin="15,0,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"  Margin="0,20,20,0">
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Image Source="View/Resources/Image/play.png" Width="50" RenderOptions.BitmapScalingMode="Fant" Margin="5,0,0,0"/>
                        <TextBlock Text="{DynamicResource Play}" Foreground="White" FontSize="30" VerticalAlignment="Center" Margin="15,0,0,0"/>
                    </StackPanel>
                    <StackPanel   Margin="0,20,20,0" >
                        <StackPanel Orientation="Horizontal" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,30,0,0" Name="spToolTitle">
                        <Image Source="View/Resources/Image/tool.png" Width="50" RenderOptions.BitmapScalingMode="Fant" Margin="5,0,0,0"/>
                        <TextBlock Text="{DynamicResource Tool}" Foreground="White" FontSize="30" VerticalAlignment="Center" Margin="15,0,0,0"/>
                    </StackPanel>
                    <Border CornerRadius="10" BorderBrush="#d7d7d9" BorderThickness="1" Background="#fefefe" Margin="0,10,0,0" Visibility="Hidden" Name="bTool">
                        <StackPanel Name="spTool" />
                    </Border>
                </StackPanel>
            </Grid>
        </DockPanel>
        <Grid Background="Transparent" Name="dpFile">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Name="gFile" Grid.Column="0" Width="600" Background="#222326"  HorizontalAlignment="Left"  >
                <Grid.Effect>
                    <DropShadowEffect Color="#1c1e1f"  BlurRadius="20" />
                </Grid.Effect>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid Name="spBg" Height="400" >
                    <Grid.Background>
                        <ImageBrush ImageSource="View/Resources/Image/main_bg.jpg" Stretch="UniformToFill"/>
                    </Grid.Background>
                    <Grid Background="#50000000" >
                        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="25,25,0,0">
                          
                            <Button HorizontalAlignment="Left" Style="{StaticResource EmptyButtonStyle}"  Margin="0,15,0,0" Click="ToHelpOverview" Background="Transparent" >
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Image Source="View/Resources/Image/help.png" Width="25" RenderOptions.BitmapScalingMode="Fant" />
                                        <TextBlock Text="{DynamicResource HelpOverview}" Foreground="white" VerticalAlignment="Center"  FontSize="18" Margin="10,0,0,0" HorizontalAlignment="Left" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="25,0,0,25">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" MouseLeftButtonDown="Image_MouseLeftButtonDown">
                                <Image Width="25" Height="25" Source="View/Resources/Image/hint.png"/>
                                <TextBlock VerticalAlignment="Center" Text="查看颜色表和位置表" Foreground="White" Margin="10,0,0,0" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
                <Border  Grid.Row="1" BorderThickness="0,5,0,0" BorderBrush="#555555">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{DynamicResource MyProject}" VerticalAlignment="Center"/>
                        <TextBlock Margin="20,0,0,0" Grid.Column="1" Name="tbProjectPath" Foreground="Gray" FontSize="18" TextWrapping="Wrap" TextAlignment="Right" MouseEnter="TextBlock_MouseEnter" MouseLeave="TextBlock_MouseLeave" MouseLeftButtonUp="tbProjectPath_MouseLeftButtonDown"/>
                    </Grid>
                </Border>
                    <Grid  Grid.Row="2" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Name="spFileTitle" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Padding="10" Text="{DynamicResource Light}" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown_1"/>
                            <TextBlock Padding="10" Text="{DynamicResource LightScript}" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown_1"/>
                            <TextBlock Padding="10" Text="{DynamicResource LimitlessLamp}" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown_1"/>
                            <TextBlock Padding="10" Text="{DynamicResource Play_}" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown_1"/>
                        </StackPanel>
                    <Image  Source="View/Resources/Image/refresh.png" MouseLeftButtonDown="Image_MouseLeftButtonDown_2" Width="25" Margin="0,0,10,0" RenderOptions.BitmapScalingMode="Fant"  HorizontalAlignment="Right" VerticalAlignment="Center" />
                    <Rectangle Width="70" Name="rFile" Height="3" Grid.Row="1" Fill="White" HorizontalAlignment="Left"/>
                        <Border BorderThickness="0,1,0,0" Grid.Row="2" BorderBrush="#555555">
                        <StackPanel Name="spFile"  Orientation="Horizontal" VerticalAlignment="Stretch">
                            <ListBox Name="lbLight" Style="{DynamicResource ListBoxStyle1}" Background="Transparent" BorderThickness="0" Foreground="White" FontSize="16"  />
                            <ListBox Name="lbLightScript" Style="{DynamicResource ListBoxStyle1}" Background="Transparent" BorderThickness="0" Foreground="White" FontSize="16" />
                            <ListBox Name="lbLimitlessLamp" Style="{DynamicResource ListBoxStyle1}" Background="Transparent" BorderThickness="0" Foreground="White" FontSize="16" />
                            <ListBox Name="lbPlay" Style="{DynamicResource ListBoxStyle1}" Background="Transparent" BorderThickness="0" FontSize="16" Foreground="White" />
                        </StackPanel>
                        </Border>
                    </Grid>
                <Border  Grid.Row="1" BorderThickness="0,5,0,0" BorderBrush="#555555" Visibility="Collapsed">
                    <TreeView Name="lbMain" FontSize="18" Background="Transparent" BorderBrush="{x:Null}" Foreground="#9CA3A8" >
                        <TreeViewItem Name="tvLight" Header="Light" Foreground="#a8a9a9" HorizontalAlignment="Stretch" Style="{StaticResource TreeViewItemNormal}"/>
                        <TreeViewItem Name="tvLightScript" Header="LightScript" Foreground="#a8a9a9" Style="{StaticResource TreeViewItemNormal}"/>
                        <TreeViewItem Name="tvLimitlessLamp" Header="LimitlessLamp" Foreground="#a8a9a9" Style="{StaticResource TreeViewItemNormal}"/>
                        <TreeViewItem Name="tvPlay" Header="Play" Foreground="#a8a9a9" Style="{StaticResource TreeViewItemNormal}"/>
                    </TreeView>
                </Border>
                <Border  Grid.Row="3"  VerticalAlignment="Bottom" Name="dpProjectPath" BorderThickness="0,1,0,0" BorderBrush="#555555">
                    <StackPanel Orientation="Horizontal">
                        <Menu Name="mMain" FontSize="14" Margin="5" Foreground="#f0f0f0"  BorderBrush="#555555" BorderThickness="0,0,0,2">
                            <MenuItem Style="{DynamicResource bigMenuItem}" Header="{DynamicResource New}"  FontSize="18" Foreground="#f0f0f0"  >
                                    <MenuItem Click="btnNew_Click" Name="miLight" Header="{DynamicResource Light}"  FontSize="16" Foreground="#f0f0f0"  />
                                    <MenuItem Click="btnNew_Click" Name="miLightScript" Header="{DynamicResource LightScript}"  FontSize="16" Foreground="#f0f0f0"  />
                                    <MenuItem Click="btnNew_Click" Name="miLimitlessLamp" Header="{DynamicResource LimitlessLamp}"  FontSize="16" Foreground="#f0f0f0"  />
                                    <Separator />
                                    <MenuItem Click="btnNew_Click" Name="miPage"  Header="{DynamicResource Page}"  FontSize="16" Foreground="#f0f0f0"  />
                            </MenuItem>
                            <MenuItem Style="{DynamicResource bigMenuItem}" Header="{DynamicResource Build}"  FontSize="18" Foreground="#f0f0f0"  Click="MenuItem_Click"/>
                            <MenuItem Style="{DynamicResource bigMenuItem}" Header="{DynamicResource Play_}"  FontSize="18" Foreground="#f0f0f0"  Click="MenuItem_Click2"/>
                        </Menu>
                    </StackPanel>
                </Border>
                <Popup  PlacementTarget="{Binding ElementName=tbProjectPath}" Name="popFile" Placement="Bottom" AllowsTransparency="True" VerticalOffset="10" PopupAnimation="Fade"  StaysOpen="False">
                    <Border Name="bProjectPathControl" CornerRadius="5" Background="#363b40" BorderBrush="#b8bfc6" Width="296"  BorderThickness="2" >
                        <StackPanel>
                            <TextBlock Text="{DynamicResource SelectProject}" Foreground="#72787d"  Margin="10"/>
                            <ListBox Grid.Row="0" Name="lbProject" FontSize="16" Background="Transparent" BorderBrush="#9ca3a8" Foreground="#b8bfc6" SelectionChanged="lbProject_SelectionChanged"/>
                            <TextBlock Text="{DynamicResource Control}" Foreground="#72787d"  Margin="10"/>
                            <TextBlock Text="{DynamicResource SpaceNewProject}" Foreground="#b8bfc6"  Margin="10,0,10,10" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"/>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>
            <StackPanel Grid.Column="1" Background="Transparent" MouseLeftButtonDown="CloseFileControl"/>
        </Grid>
        <StackPanel Name="spHint" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Right">
            <StackPanel  Name="spColorTab" MouseLeftButtonDown="tbPositionTab_MouseLeftButtonDown"     >
                <TextBlock Text="{DynamicResource ColorTab}" HorizontalAlignment="Center" />
                <Viewbox Width="300"  Name="tbColorTab">
                    <Grid  >
                        <Image Source="View/Resources/Image/colortab.png"/>
                    </Grid>
                </Viewbox>
            </StackPanel>
            <StackPanel  Name="spPositionTab" MouseLeftButtonDown="tbPositionTab_MouseLeftButtonDown" Margin="0,20,0,0"     >
                <TextBlock Text="{DynamicResource PositionTab}" HorizontalAlignment="Center" />
                <Viewbox Width="300"  Name="tbPositionTab">
                    <Grid  >
                        <Image Source="View/Resources/Image/positiontab.png"/>
                    </Grid>
                </Viewbox>
            </StackPanel>
        </StackPanel>
        <StackPanel Name="spBlur"  Background="#90000000" Visibility="Collapsed" />
        <Grid Name="gSetting"/>
        <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="cMost" MouseLeftButtonDown="cMost_MouseLeftButtonDown"/>
        <Grid Name="gMain" Background="Transparent" Visibility="Collapsed"/>
        <Canvas VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="45" Width="272" Background="Transparent"  MouseEnter="Canvas_MouseEnter" MouseLeave="Canvas_MouseLeave">
            <StackPanel Orientation="Horizontal" Canvas.Top="40" Background="#1c1a1c" Name="spBottomTool">
                <Image Margin="5"  Name="iPlayer" Source="View/Resources/Image/player_white.png" Width="35" RenderOptions.BitmapScalingMode="Fant" MouseLeftButtonDown="Image_MouseLeftButtonDown_1" />
                <Image Margin="5"  Name="iPaved" Source="View/Resources/Image/paved.png" Width="35" RenderOptions.BitmapScalingMode="Fant" MouseLeftButtonDown="Image_MouseLeftButtonDown_1"/>
                <Image Margin="5"  Name="iExport" Source="View/Resources/Image/switch.png" Width="35" RenderOptions.BitmapScalingMode="Fant" MouseLeftButtonDown="Image_MouseLeftButtonDown_1"/>
                <Image Margin="5"  Name="iPianoRoll" Source="View/Resources/Image/mypianoroll.png" Width="35" RenderOptions.BitmapScalingMode="Fant" MouseLeftButtonDown="Image_MouseLeftButtonDown_1"/>
                <Image Margin="5"  Name="iData" Source="View/Resources/Image/data.png" Width="35" RenderOptions.BitmapScalingMode="Fant" MouseLeftButtonDown="Image_MouseLeftButtonDown_1"/>
                <Image Margin="5"  Name="iMy3D" Source="View/Resources/Image/3d.png" Width="35" RenderOptions.BitmapScalingMode="Fant" MouseLeftButtonDown="Image_MouseLeftButtonDown_1"/>
            </StackPanel>
        </Canvas>
        <Grid Background="Transparent" Name="gToolBackGround" Visibility="Collapsed" MouseLeftButtonDown="gToolBackGround_MouseLeftButtonDown"/>
        <Border HorizontalAlignment="Center" VerticalAlignment="Bottom" CornerRadius="10" Name="bToolChild" Background="#272727" Margin="0,0,0,45" >
            <Border.Effect>
                <DropShadowEffect Color="#1c1e1f"  BlurRadius="20" />
            </Border.Effect>
            <Grid>
                <Grid Name="gTool" />
            </Grid>
        </Border>
    </Grid>
    <!--<Image gif:ImageBehavior.AnimatedSource="../Image/bg3.gif" />-->
</Window>
